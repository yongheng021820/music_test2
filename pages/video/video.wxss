/* pages/video/video.wxss */
.video {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.video .item {
  position: relative;
  width: 48%;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}

.video .item .item_img {
  width: 100%;
}

.video .item .album .info {
  /* color: white; */
  color: white;
  font-size: 10px;
}
.video .item .album .info .count {
  position: absolute;
  top: 70px;
  left: 8px;
  /* top: 20px; */
}

.video .item .album .info .duration {
  position: absolute;
  top: 70px;
  right: 8px;
}

.video .item .content {
  font-size: 12px;

  /* 两行文字，多余部分以省略号代替 */
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* white-space: nowrap;
  text-overflow: ellipsis; */
  overflow: hidden;
}




