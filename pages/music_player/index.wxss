/* pages/music/music_player/index.wxss */
page {
  color: #fff;
}

.bg-img, .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0,0, 0.5);
  /* 背景毛玻璃效果 */
  backdrop-filter: blur(1px);
}
/* .content {
  color: white;
} */

/* 导航css */
.tab {
  display: flex;
  /* justify-content: center; */
  justify-content: center;
}

.tab .divder {
  margin: 0 10rpx;
  color: white;
}
.tab  {
  /* color: #dcdde1; */
  color: #999;
}

.active {
  color: white;
}

/* 内容 */
.swiper1 {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  /* position: relative; */
}
.swiper1 .album {
  text-align: center;
  flex: 4;
}
.swiper1 .info {
  margin: 20rpx;
}
.swiper1 .lyric{
  flex: 1;
  position: relative;
  text-align: center;
  top: 60rpx;
  color: white;
  font-size: 40rpx !important;
}
/* .swiper1 .progress {
  flex: 1;
} */

.swiper1 .progress .time   {
  display: flex;
  justify-content: space-between;
  margin: 2rpx 20rpx;
}

.swiper1 .info .title {
  font-size: 38rpx;
}
.swiper1 .info .singer, .alias {
  font-size: 24rpx;
  color: #999;
}

.swiper1 .lyric {
  font-size: 24rpx;
}

.btn {
  width: 80rpx;
}

.swiper1 .operation {
  /* position: fixed; */
  display: flex;
  justify-content: space-around;/*布局元素在水平方向上对齐方式*/
  align-items:center;/*布局元素在交叉轴方向对齐方式*/
  text-align: center;
}

.operation .player{
  width: 120rpx;
}

.swiper1 .album {
  flex: 2;
}

.swiper1 .operation {
  width: 100%;
  margin: 40rpx 0;
}

/* 单行文本，超出部分点号代替 */
.single-ellipsis{  
  width: 100%;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  white-space: nowrap; 
}

/* 歌词页面 */
.lyric {
  /* margin: 10rpx 10rpx 100rpx 10rpx; */
 color: #8F918F;
}

.lyric-list {
  height: 100%;
}
.lyric-list .item {
  height: 35px;
  line-height: 35px;
  text-align: center;
  margin: 10rpx 0;
}

.active {
  color: white;
}